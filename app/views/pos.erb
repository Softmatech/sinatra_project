<div class="container">

	<div class="btn-create">
       
            <hr>
             <h3><%= @lottery.name%> Pos </h3>
			    <button type="button" class="btn btn-primary" onclick="openForm()">Create/Add</button>	
	</div>

<div class="form-popup" id="myForm">
  <form action="/pos" method="post" class="form-container">
	<h3>POS Register Form</h3>
	<input type="hidden" name="lottery_id" value="<%= @lottery.id %>" required>

	<label for="adresse"><b>Adress : </b></label>
    <input type="text" placeholder="Enter the adresse of the POS" name="adress" required>

	<label for="tel"><b>Telephone : </b></label>
    <input type="text" placeholder="Enter the telephone of the POS" name="telephone" required>
    
    <button type="submit" class="btn">Register</button>
    <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
  </form>
</div>


<div>
<table class="table table-dark table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Telephone</th>
        <th>Adress</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    <% @lottery.posts.each do |item| %>
      <tr>
        <td><%=item.id%></td>
        <td><%=item.telephone%></td>
        <td><%=item.adress%></td>
        <td>
            <div class="dropdown">
            <button type="button" class="btn btn-warning dropdown-header" data-toggle="dropdown">
                Edit/Delete
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="/edit/pos/<%= item.id %>">Edit</a>
                <a class="dropdown-item" href="/delete/pos/<%=item.id%>">Delete</a>
            </div>
            </div>
        </td>
      </tr>
    <% end %>
      
      
    </tbody>
  </table>
</div>
</div>